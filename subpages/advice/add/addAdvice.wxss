.contant{
  background-color: #ffffff;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

.text_area{
  width: 84%;
  margin-left: 6%;
  border: 2rpx solid #B5B5B5;
  padding: 15rpx;
  border-radius: 10rpx;
}

.upload{
  margin-top: 25rpx;
  width: 94%;
  margin-left: 6%;
}


.border{
  border: 2rpx solid #B5B5B5;
  border-radius: 5rpx;
}

.sub{
  width: 94%;
  margin-left: 3%;
  margin-top: 50rpx;
  margin-bottom: 20rpx;

}
.btn{
  width: 100%;
  border-radius: 5px !important;
  border-radius: var(--button-border-radius,5px) !important;
  background-color: #189AFE;
  font-size: 36rpx;
}

.bd{
  padding-left: 2rpx;
  padding-bottom: 2rpx;
  padding-right: 2rpx;
}
/* vant dialog弹窗的确定按钮统一改为 */
.dialog-index--van-dialog__confirm{
  color: #189AFE !important;
}
/* popup的确定 */
.van-picker__confirm {
  color: #189AFE !important;
}

/* 默认属性 */
.van-hairline--top-bottom:after {
  border-width: 0px 0 !important;
}



  
