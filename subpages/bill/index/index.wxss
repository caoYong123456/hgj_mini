   .hd {
	position: fixed;
	top: 0;
	left: 0;
	width: 92%;
	margin-left: 3%;
	margin-top: 0px;
	height: 88rpx;
	line-height: 88rpx;
	display: flex;
	background: #fff;
	z-index: 100;
  }
  
  .hd_flex {
	flex: 1;
	text-align: center;
	font-size: 28rpx;
	font-family: PingFang SC;
	font-weight: 500;
	color: #333333;
  }
  
  .hd_flex_on {
	font-size: 30rpx;
	color: #FA871E;
	position: relative;
  }
  
  .hd_flex_on::after {
	content: "";
	position: absolute;
	bottom: 0;
	width: 40%;
	height: 6rpx;
	background: #FA871E;
	border-radius: 3rpx;
	left: 50%;
	transform: translateX(-50%);
  }
  
