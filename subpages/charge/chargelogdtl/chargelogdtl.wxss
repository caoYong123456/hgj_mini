.charge-top-view, .charge-info-view, .charge-tips-view{
  border-radius: 0.4em;
  margin:20rpx 30rpx;
  background-color:#fff;
  box-shadow:rgba(0,0,0,0.07) 2rpx 2rpx 2rpx 2rpx ;
}

.van-cell {
  border-radius: 0.4em;
}
.van-cell-item{
  padding: 20rpx 0rpx;
}
.van-cell-item-line{
  padding: var(--cell-vertical-padding,3px) var(--cell-horizontal-padding,16px) !important;
}
.van-cell__title{
  flex: 2 !important;
  color: #999999 !important;
  font-size: 28rpx !important;
}
.van-cell__value{
  flex: 4 !important;
  color: #363F4D !important;
  font-size: 28rpx !important;
  text-align: right !important;
}
.top-item-class{
  margin:24rpx 0rpx;
}
.charge-top-view{
  text-align: center;
}
.title-name{
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}
.title-value{
  font-size: 40rpx;
  font-weight: 500;
  text-align: center;
  color: #363f4d;
  line-height: 56rpx;
  padding-top:20rpx;
}
.charge-tips-view{
  height: 90rpx;
}
.tips-class{
  margin: 20rpx 0rpx;
  font-size: 28rpx;
  font-weight: 400;
  text-align: left;
  color: #999999;
  position: relative; /*脱离文档流*/
  top: 50%; /*偏移*/
}
.tips-icon{
  padding-left: 38rpx;
  padding-top: 3rpx;
}
.tips-text{
  padding-left: 24rpx;
}
.charge-log-stat{
  color: #363f4d;
}
.charged-stat{
  color: #33CD73;
}
.charge-btn{
  position: fixed;
  bottom: 0px;
  height: 140rpx;
  width: 100%;
  z-index:66;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  box-shadow:rgba(0,0,0,0.07) 2rpx 2rpx 2rpx 2rpx ;
}
.charge-btn-view-class{
  width: 92%;
}
.charge-btn-class{
  height: 88rpx !important;
  border-radius: 1.5em !important;
  font-size: 32rpx !important;
}