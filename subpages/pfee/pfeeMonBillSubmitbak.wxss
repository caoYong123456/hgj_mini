.foot{
  position: fixed;
  width: 95%;
  bottom: 0;
  display: flex;
  justify-content: flex-end;
  background-color: white;
  height:120rpx;
  padding: 0 20rpx 20rpx 20rpx;
}
.ord-amt{
  line-height: 100%;
}
.btn-view{
  padding: 30rpx 30rpx 0 30rpx;
}
.btn{
  border-radius:10rpx!important;
}
.pfee-buttom{
  background-color: #1A8AFA!important;
  border: var(--button-border-width,1px) solid var(--button-danger-border-color,#1A8AFA)!important;
  border-radius:10rpx!important;
}
.bill-title{
  margin-top: 20rpx;
  /* margin-bottom: rpx; */
}
.global-empty {
  padding-top: 0;
}
