/* ---------- */
.body{
  padding: 34rpx 20rpx;
  padding-right: 0;
}
.bill-cell{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  height: 200rpx;
}

.bill-head{
  background-color: #F9CDA4;
  font-size: 24rpx;
  width: 104rpx;
  color: white;
  text-align: center;
  border-top-left-radius:30rpx;
  border-bottom-right-radius:30rpx;
  position: relative;
  top:4rpx;
}
.bill-body{
  width: 156rpx;
  height: 140rpx;
  background-color: white;
}
.bill-body-pay{
  background-color: #F0F0F0;
  border:2rpx solid #F0F0F0;
  border-radius: 8rpx;
  height:140rpx;
}
.bill-body-unpay{
  background-color: #FFFFFF;
  border:2rpx solid #D2D2D2;
  border-radius: 8rpx;
  height:140rpx;
}
.selected{
  border: 4rpx solid #2C8AFF;
  box-shadow: #D0D0D0 2rpx 2rpx 2rpx 2rpx ;
  height:136rpx;
  border-radius: 8rpx;
}

.top-right-icon{
  position: absolute;
  top:0;
  right:0;
  width: 40rpx;
  height: 40rpx;
  background-color: #F0F0F0;
}

.bill-mon{
  height: 70rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 70rpx;
  color: #363F4D;
  /* padding-top: 10rpx; */
}
.bill-mon-re{
  position: relative;
}
.bill-mon-ab{
  position: absolute;
  line-height: 40rpx;
  top: 25rpx;
  left: 52rpx;
}
.bill-amt{
  height: 70rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 50rpx;
}









