	.float_window{
		position: absolute;
		z-index: 5;
		width: 100%;
		height: 100%;
	}

	.float_sort {
		position: absolute;
		text-align:center;
		top: 26rpx;
	}
	.float_sort .float_tip {
		position: absolute;
		padding: 10px;
		box-shadow: 0 8px 13px rgba(0, 0, 0, 0.36), 0 0 0 1px rgba(0, 0, 0, 0.06);
		background-color: #f5f6f7;
		border-bottom: 2px solid #f5f6f7;
		border-radius: .8em;
		font-size: 13px;
		transition: all 200ms ease-in-out, visibility 0ms;
		padding-bottom: 5px;
		color: white;
		padding-top: 5px;
		width: 160px;
	}

	.float_sort .float_tip:before, .float_sort .float_tip:after {
		content: "";
		display: block;
		width: 0;
		height: 0;
		position: absolute;
		left: 126px;
		top: -28px;
		z-index: 3;
		border: solid 15px transparent;
		border-bottom-color: #f5f6f7;
	}
	.float_sort .float_tip:before {
		top: -25px;
		z-index: 2;
		border-bottom-color: #f5f6f7;
	}

	.show.float_sort .float_tip {
		display: block;
		visibility: visible;
		transform: rotateX(0deg) rotateY(0deg) rotateZ(0deg) scale(1);
		animation: wobble 700ms;
		opacity: 1;
	}

	.float_sort.show .footer-nav-link {
		background-color: rgba(180, 181, 183, 0.5);
	}

