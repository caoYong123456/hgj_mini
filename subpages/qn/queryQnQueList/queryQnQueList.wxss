}

.sign-img{
  -webkit-transform: rotate(270deg);
  -moz-transform: rotate(270deg);
  -o-transform: rotate(270deg);
  -ms-transform: rotate(270deg);
  transform: rotate(270deg);
  height: 140rpx;
  margin: -20rpx;
}

.queDesc{
  font-size: 32rpx;
  font-weight: 500;
  text-align: left;
  color: #363f4d;
  line-height: 44rpx;
  font-family: PingFangSC, PingFangSC-Medium;

}

.queClass{
  margin-bottom: 30rpx;
  padding: 0 32rpx 16rpx 32rpx;
}

.queClass::after{
  content: "";
  display: block;
  margin-left: 2%;
  width:96%;
  height:20rpx;
  border-bottom: solid 1px #f2f2f2;
}

.optDesc .van-radio__icon-wrap {
  padding: 20rpx 0rpx 20rpx 20rpx;
}
  
.optDesc .van-radio__label {
  /* font-size: 28rpx; */
