  width: 100%;
}

.optDesc2 .van-checkbox__icon-wrap {
  padding: 20rpx 0rpx 20rpx 20rpx;
}

.optDesc2 .van-checkbox__label {
  color: #777777;
  padding: 20rpx 20rpx 20rpx 0rpx;
  width: 100%;
}

.optClass{
  margin-top: 12rpx;
  /* border:2rpx solid #F0F4F7; */
