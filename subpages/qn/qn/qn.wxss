page{
  border-top: 2rpx solid #F2F2F2;
  font-family: Microsoft YaHei Regular, Microsoft YaHei Regular-Regular;
  font-size: 32rpx;
  background-color: #FFFFFF;
}

.qn-bg{
  width: 100%;
  height: 282rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.tab{
  padding: 54rpx 26rpx 0 54rpx;
}
.tab-col{
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  line-height: 44rpx;
  color: #363f4d;
}
.tab-selected{
  color: #179AFD;
}
.tab-selected::after{
  content: "";
  display: block;
  margin-left: 82rpx;
  width:60rpx;
  height:16rpx;
  border-bottom:6rpx solid #179AFD;
  border-radius: 3rpx;
}

.qn-view{
  padding: 0 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  line-height: 40rpx;
}
.qb-row{
  padding: 36rpx 0;
  border-bottom: solid 1px #f2f2f2;
}
.qn-icon{
  width: 32rpx;
  height: 32rpx;
  margin-top: 5rpx;
}
.qb-first{
  padding-left: 20rpx;
}








